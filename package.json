{
  "name": "ok-mono",
  "private": true,
  "scripts": {
    "setup": "pnpm submodule",
    "clean": "find . -name \"node_modules\" -type d -prune -exec rm -rf '{}' + & rm pnpm-lock.yaml",
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "submodule": "git submodule sync && git submodule update --init --remote "
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.2.3",
    "typescript": "5.5.4"
  },
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18"
  }
}
